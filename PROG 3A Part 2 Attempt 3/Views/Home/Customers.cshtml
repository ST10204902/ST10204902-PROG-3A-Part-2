@model CustomersViewModel
@{
    // Set the title of the page
    ViewData["Title"] = "Customer List";
}
<!-- Display the title of the page -->
<h1>@ViewData["Title"]</h1>

<div class="text-center">
    <a class="new-product-button with-icon" asp-action="Create" asp-controller="Users">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none">
            <path d="M9.99996 4.79169V15.2084M15.2083 10H4.79163" stroke="#0057FC" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
        </svg>
        New Farmer
    </a>
</div>

<!-- Display the customer table title -->
<h3>Customer Table</h3>

<!-- Create a table to display the customers -->
<table class="table myTable">
    <thead>
        <tr>
            <!-- Define the headers of the table -->
            <th>Id</th>
            <th>Username</th>
            <th>Last Name</th>
            <th>First Name</th>
            <th>Middle Names</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop through each user in the model -->
        @foreach (var user in Model.Users)
        {
            <tr>
                <!-- Display the properties of the user -->
                <td>@Html.DisplayFor(modelItem => user.Id)</td>
                <td>@Html.DisplayFor(modelItem => user.UserName)</td>
                <td>@Html.DisplayFor(modelItem => user.LastName)</td>
                <td>@Html.DisplayFor(modelItem => user.FirstName)</td>
                <td>@Html.DisplayFor(modelItem => user.MiddleNames)</td>
                <td>@Html.DisplayFor(modelItem => Model.UserRoles[user.Id])</td>
            </tr>
        }
    </tbody>
</table>
